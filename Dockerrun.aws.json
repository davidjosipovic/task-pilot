{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "task-pilot-backend",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 4000,
          "containerPort": 4000
        },
        {
          "hostPort": 443,
          "containerPort": 443
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "4000"
        }
      ]
    }
  ]
}
