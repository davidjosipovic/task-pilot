FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build TypeScript
RUN npm install typescript @types/node --save-dev
RUN npx tsc

# Expose port
EXPOSE 4000

# Start production server
CMD ["node", "dist/index.js"]
