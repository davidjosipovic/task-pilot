files:
  /etc/nginx/conf.d/https.conf:
    mode: "000644"
    owner: root
    group: root
    content: |
      # Redirect HTTP to HTTPS
      server {
        listen 8080;
        return 301 https://$host$request_uri;
      }

container_commands:
  01_install_certbot:
    command: |
      sudo amazon-linux-extras install epel -y || true
      sudo yum install -y certbot || true
